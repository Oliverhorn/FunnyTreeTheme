{# src/Resources/views/storefront/layout/header/top-bar.html.twig #}
{% sw_extends '@Storefront/storefront/layout/header/top-bar.html.twig' %}

{% block layout_header_top_bar %}
	<div class="ft-topbar">
		<div
			class="container ft-topbar__inner flex-column flex-lg-row align-items-center align-items-lg-stretch justify-content-start justify-content-lg-between">


			{# LEFT: Desktop = Telefon | <LG = WhatsApp #}
			<div
				class="ft-topbar__left d-flex justify-content-center justify-content-lg-start">

				{# ðŸ“ž Telefon â€” nur Desktop sichtbar (>= lg) #}
				{% set tel = theme_config('ft-topbar-phone')|default('') %}
				{% if tel %}
					<a href="tel:{{ tel|replace({' ': '', '(': '', ')': '', '-': ''})|e }}" class="ft-topbar__link ft-topbar__tel d-none d-lg-inline-flex align-items-center gap-2" aria-label="{{ theme_config('ft-topbar-phone-aria')|default('Hotline anrufen') }}" title="{{ theme_config('ft-topbar-phone-aria')|default('Hotline anrufen') }}">
						<span class="ft-topbar__icon">
							{% sw_include '@FunnyTreeTheme/icons/phone.svg' %}
						</span>
						<span class="ft-topbar__text">{{ tel }}</span>
					</a>
				{% endif %}

				{# ðŸ’¬ WhatsApp â€” nur Mobile/Tablet sichtbar (< lg) #}
				{% set wa = theme_config('ft-topbar-whatsapp')|default('') %}
				{% if wa %}
					<a href="https://wa.me/{{ wa|replace({' ': '', '+': '', '-': ''})|e }}" class="ft-topbar__link ft-topbar__whatsapp d-inline-flex d-lg-none align-items-center" target="_blank" rel="noopener" aria-label="{{ theme_config('ft-topbar-whatsapp-aria')|default('WhatsApp-Chat starten') }}" title="{{ theme_config('ft-topbar-whatsapp-aria')|default('WhatsApp-Chat starten') }}">
						<span
							class="ft-topbar__icon ft-topbar__icon--whatsapp">
							{# wichtig: WhatsApp-SVG behÃ¤lt sein eigenes GrÃ¼n #}
							{% sw_include '@FunnyTreeTheme/icons/whatsapp.svg' %}
						</span>
					</a>
				{% endif %}

			</div>

			{# RIGHT: Sprache & WÃ¤hrung #}
			<div class="ft-topbar__right d-flex align-items-center gap-3 justify-content-center justify-content-lg-end">
				<div class="ft-topbar__language">
					{% sw_include '@Storefront/storefront/layout/header/actions/language-widget.html.twig' %}
				</div>
				<div class="ft-topbar__currency">
					{% sw_include '@Storefront/storefront/layout/header/actions/currency-widget.html.twig' %}
				</div>
			</div>

		</div>
	</div>
{% endblock %}
