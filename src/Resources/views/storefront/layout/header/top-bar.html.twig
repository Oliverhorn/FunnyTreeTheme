{# src/Resources/views/storefront/layout/header/top-bar.html.twig #}
{% sw_extends '@Storefront/storefront/layout/header/top-bar.html.twig' %}

{% block layout_header_top_bar %}
	<div class="ft-topbar">
		<div
			class="container ft-topbar__inner">

			{# Linke Seite: Telefon – nur Desktop sichtbar #}
			<div class="ft-topbar__left">
				<a href="tel:+498241123456" class="ft-topbar__link ft-topbar__tel d-none d-md-inline-flex" title="Hotline" rel="noopener" aria-label="Hotline anrufen">
					<span class="ft-topbar__icon">
						<img src="{{ asset('storefront/icons/phone.svg', '@FunnyTreeTheme') }}" alt="Telefon" loading="lazy" width="16" height="16"/>
					</span>
					<span class="ft-topbar__text">
						Hotline: +49&nbsp;8241&nbsp;123456
					</span>
				</a>
			</div>

			{# Rechte Seite: Sprache & Währung #}
			<div class="ft-topbar__right">
				<div class="ft-topbar__language">
					{% sw_include '@Storefront/storefront/layout/header/actions/language-widget.html.twig' %}
				</div>
				<div class="ft-topbar__currency">
					{% sw_include '@Storefront/storefront/layout/header/actions/currency-widget.html.twig' %}
				</div>
			</div>

		</div>
	</div>
{% endblock %}
